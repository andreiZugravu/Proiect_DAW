
@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

<form method="post" action="/Subjects/Edit/@ViewBag.Subject.SubjectId">
    @Html.HttpMethodOverride(HttpVerbs.Put)
    <label for="Title">Title</label>
    <br />
    <input type="text" name="Title" value="@ViewBag.Subject.Title" />
    <br /><br />
    <label for="Content">Content</label>
    <br />
    <input type="text" name="Content" value="@ViewBag.Subject.Content" />
    <br /><br />
    <label for="CategoryId">Category</label>
    <br />
    <select name="CategoryId">
        @foreach (var category in ViewBag.CategoriesIds)
        {
            if (category.CategoryId == ViewBag.Subject.CategoryId)
            {
                <option value="@category.CategoryId" selected>@category.Name</option>
            }
            else
            {
                <option value="@category.CategoryId">@category.Name</option>
            }
        }
    </select>
    <br/>

    <button type="submit">Submit</button>
</form>